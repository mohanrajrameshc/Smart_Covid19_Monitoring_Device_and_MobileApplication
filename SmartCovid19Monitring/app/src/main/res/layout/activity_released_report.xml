<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Released Report"
        android:layout_margin="10dp"
        android:textSize="30sp"
        android:gravity="center"
        android:background="@color/colorFlowerDark"
        android:textColor="@color/colorFlower"/>
    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginBottom="36dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="200dp"
            android:text="From Date"
            android:gravity="center"
            android:textColor="@color/colorBlueJeansDark"
            android:textSize="20sp"
            android:layout_height="match_parent" />
        <TextView
            android:text="To Date"
            android:gravity="center"
            android:textColor="@color/colorBlueJeansDark"
            android:textSize="20sp"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvfdate"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvtdate"
            android:layout_width="168dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnget"
            android:layout_margin="20dp"
            android:text="Get Report"
            android:background="@drawable/bg_ui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:weightSum="3">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="Total count"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:layout_height="match_parent" />



    </LinearLayout>


    android:layout_width="match_parent"
    android:layout_height="313dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvuid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center"
            android:textColor="@color/colorLavanderDark"
            android:textSize="20sp" />


    </LinearLayout>


    <Button
        android:id="@+id/btnsendemail"
        android:text="Send Email"
        android:layout_margin="50dp"
        android:background="@drawable/bt_uifb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>